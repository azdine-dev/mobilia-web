{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*"
      },
      "sourceMaps": true,
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js"],
      "runtimeArgs": ["--preserve-symlinks"],
      "timeout": 30000,
      "userDataDir": "${workspaceFolder}/.vscode/chrome"
    }
  ]
}
